local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function CreateRobloxStyleBanUI()
    local playerGui = LocalPlayer:WaitForChild("PlayerGui")

    -- Xóa UI cũ nếu có
    local oldUI = playerGui:FindFirstChild("RobloxBanUI")
    if oldUI then oldUI:Destroy() end

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "RobloxBanUI"
    screenGui.IgnoreGuiInset = true
    screenGui.ResetOnSpawn = false
    screenGui.Parent = playerGui

    local bg = Instance.new("Frame")
    bg.BackgroundColor3 = Color3.fromRGB(17, 17, 17) -- background đen tối
    bg.Size = UDim2.new(1, 0, 1, 0)
    bg.Position = UDim2.new(0, 0, 0, 0)
    bg.Parent = screenGui

    local title = Instance.new("TextLabel")
    title.Text = "Disconnected"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 40
    title.TextColor3 = Color3.new(1, 1, 1)
    title.BackgroundTransparency = 1
    title.Size = UDim2.new(1, 0, 0, 60)
    title.Position = UDim2.new(0, 0, 0.35, 0)
    title.Parent = bg
    title.TextStrokeTransparency = 0.8

    local message = Instance.new("TextLabel")
    message.Text = "You have been kicked from this experience: You have been permanently banned (Legacy Ban System)\n(Error Code: 267)"
    message.Font = Enum.Font.Gotham
    message.TextSize = 20
    message.TextColor3 = Color3.new(1, 1, 1)
    message.BackgroundTransparency = 1
    message.Size = UDim2.new(0.7, 0, 0, 80)
    message.Position = UDim2.new(0.15, 0, 0.45, 0)
    message.TextWrapped = true
    message.Parent = bg
    message.TextStrokeTransparency = 0.9
end

CreateRobloxStyleBanUI()
