-- LocalScript ONLY: Jump scare + flash + fake ban
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local Lighting = game:GetService("Lighting")
local LocalPlayer = Players.LocalPlayer

-- üíÄ Add blur
local blur = Instance.new("BlurEffect")
blur.Size = 25
blur.Parent = Lighting

-- üîä Scream Sound
local screamSound = Instance.new("Sound", workspace)
screamSound.SoundId = "rbxassetid://138186576" -- Loud scream
screamSound.Volume = 10
screamSound:Play()

-- üëª Flash Effect
local gui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
gui.Name = "ShockEffect"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false

local flashFrame = Instance.new("Frame", gui)
flashFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
flashFrame.Size = UDim2.new(1, 0, 1, 0)
flashFrame.BackgroundTransparency = 1

-- ‚ö° Flashing loop (black-white flicker)
task.spawn(function()
	for i = 1, 10 do
		flashFrame.BackgroundColor3 = (i % 2 == 0) and Color3.new(0,0,0) or Color3.new(1,1,1)
		flashFrame.BackgroundTransparency = 0
		wait(0.07)
		flashFrame.BackgroundTransparency = 1
	end
end)

-- Delay 3s ‚Üí show fake ban
task.delay(3, function()
	gui:Destroy() -- remove flash
	screamSound:Stop()

	-- üëÆ‚Äç‚ôÇÔ∏è FAKE BAN GUI
	local screenGui = Instance.new("ScreenGui")
	screenGui.Name = "FakeBanUI"
	screenGui.IgnoreGuiInset = true
	screenGui.ResetOnSpawn = false
	screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

	local bg = Instance.new("Frame", screenGui)
	bg.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
	bg.Size = UDim2.new(1, 0, 1, 0)
	bg.BackgroundTransparency = 1
	TweenService:Create(bg, TweenInfo.new(0.5), {BackgroundTransparency = 0.5}):Play()

	local box = Instance.new("Frame", bg)
	box.AnchorPoint = Vector2.new(0.5, 0.5)
	box.Position = UDim2.new(0.5, 0, 0.5, 0)
	box.Size = UDim2.new(0, 400, 0, 180)
	box.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	box.BorderSizePixel = 0

	local title = Instance.new("TextLabel", box)
	title.Text = "Disconnected"
	title.Size = UDim2.new(1, 0, 0.25, 0)
	title.TextColor3 = Color3.fromRGB(255, 255, 255)
	title.TextScaled = true
	title.Font = Enum.Font.SourceSansBold
	title.BackgroundTransparency = 1

	local line = Instance.new("Frame", box)
	line.Size = UDim2.new(1, -20, 0, 1)
	line.Position = UDim2.new(0, 10, 0.22, 0)
	line.BackgroundColor3 = Color3.fromRGB(80, 80, 80)

	local message = Instance.new("TextLabel", box)
	message.Text = "You were kicked from this experience:\nYou are permanently banned.\n(Error Code: 267)"
	message.Size = UDim2.new(0.9, 0, 0.4, 0)
	message.Position = UDim2.new(0.05, 0.3, 0)
	message.TextColor3 = Color3.fromRGB(230, 230, 230)
	message.TextScaled = true
	message.TextWrapped = true
	message.Font = Enum.Font.SourceSans
	message.BackgroundTransparency = 1

	local button = Instance.new("TextButton", box)
	button.Text = "Leave"
	button.Size = UDim2.new(0, 150, 0, 40)
	button.Position = UDim2.new(0.5, -75, 0.8, 0)
	button.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	button.TextColor3 = Color3.fromRGB(0, 0, 0)
	button.TextScaled = true
	button.Font = Enum.Font.SourceSansBold

	button.MouseButton1Click:Connect(function()
		game:Shutdown()
	end)
end)
